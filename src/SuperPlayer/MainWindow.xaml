<shellcontrols:RichViewWindow
        x:Class="SuperPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:aplayer="clr-namespace:AxAPlayer3Lib;assembly=AxInterop.APlayer3Lib"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SuperPlayer"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:shellcontrols="clr-namespace:SuperApp.Shell.Controls;assembly=SuperApp.Shell.Controls"
        xmlns:ultimate="http://schems.ultimate.com/netfx/2016/xaml/presentation"
        xmlns:views="clr-namespace:SuperPlayer.Views"
        Title="SuperPlayer"
        Width="1352"
        Height="760"
        ultimate:WindowHelper.SaveWindowPosition="True"
        ActiveGlowColor="{StaticResource MainColor}"
        Background="{StaticResource MainBackground}"
        Icon="{StaticResource MainIcon}"
        InactiveGlowColor="{StaticResource MainColor}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" />
