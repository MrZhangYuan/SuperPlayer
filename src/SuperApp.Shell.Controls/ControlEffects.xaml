<ResourceDictionary
    x:Class="SuperApp.Shell.Controls.ControlEffects"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Storyboard x:Key="ControlShakingStoryboard">
        <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
            <SplineDoubleKeyFrame KeyTime="00:00:00.100" Value="-25" />
            <SplineDoubleKeyFrame KeyTime="00:00:00.200" Value="25" />
            <SplineDoubleKeyFrame KeyTime="00:00:00.300" Value="-25" />
            <SplineDoubleKeyFrame KeyTime="00:00:00.400" Value="25" />
            <SplineDoubleKeyFrame KeyTime="00:00:00.500" Value="0" />
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>

    <Storyboard x:Key="ControlShakingStoryboardForever" RepeatBehavior="Forever">
        <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
            <SplineDoubleKeyFrame KeyTime="00:00:00.050" Value="-25" />
            <SplineDoubleKeyFrame KeyTime="00:00:00.150" Value="25" />
            <SplineDoubleKeyFrame KeyTime="00:00:00.200" Value="0" />
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>


